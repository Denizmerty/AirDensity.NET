<!-- AboutDialog.xaml -->
<ContentDialog
    x:Class="AirDensity.NET.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AirDensity.NET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About Extended ISA Model Calculator"
    CloseButtonText="OK"
    DefaultButton="Close">

    <StackPanel Spacing="10">
        <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}" Text="Extended ISA Model Calculator"/>
        <TextBlock Text="Version 1.0.0"/>
        <TextBlock Text="Calculates atmospheric properties based on the Extended International Standard Atmosphere model." TextWrapping="Wrap"/>
        <TextBlock TextWrapping="Wrap">
            <Run Text="For questions and suggestions, reach me at "/>
            <Hyperlink NavigateUri="mailto:denizmerty@gmail.com">denizmerty@gmail.com</Hyperlink>
        </TextBlock>
        <!-- Add more details if needed -->
    </StackPanel>
</ContentDialog>